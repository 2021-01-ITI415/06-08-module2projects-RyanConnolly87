<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.5" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->

	<!-- Layer0, the deepest cards. -->
	<slot id="0" x="0" y="0" faceup="0" layer="3"  />
	<slot id="1" x=".25"  y="0" faceup="0" layer="2" hiddenby="0" />
	<slot id="2" x=".5"  y="0" faceup="0" layer="1" hiddenby="1" />
	<slot id="3" x=".75" y="0" faceup="0" layer="0"  hiddenby="2"/>

	<!-- Layer1, the next level. -->
	<slot id="4" x="3.5" y="6" faceup="0" layer="3"  />
	<slot id="5" x="3.75" y="6" faceup="0" layer="2" hiddenby="4" />
	<slot id="6" x="4"  y="6" faceup="0" layer="1" hiddenby="5" />
	<slot id="7" x="4.25"  y="6" faceup="0" layer="0" hiddenby="6" />

	<!-- Layer2, the next level. -->
	<slot id="8" x="6.75"  y="3.5" faceup="0" layer="3"  />
	<slot id="9"  x="7" y="3.5" faceup="0" layer="2" hiddenby="8" />
	<slot id="10" x="7.25" y="3.5" faceup="0" layer="1" hiddenby="9" />
	<slot id="11" x="7.5" y="3.5" faceup="0" layer="0" hiddenby="10" />
	
	<!-- Layer3, the top level. -->
	<slot id="12" x="8" y="0" faceup="0" layer="3"  />
	<slot id="13" x="8.25"  y="0" faceup="0" layer="2" hiddenby="12" />
	<slot id="14" x="8.5"  y="0" faceup="0" layer="1" hiddenby="13" />
	<slot id="15" x="8.75"  y="0" faceup="0" layer="0"  hiddenby="14"/>

	<!-- Layer4, the top level. -->
	<slot id="16" x="6.75"  y="-3.5" faceup="0" layer="3"  />
	<slot id="17" x="7"  y="-3.5" faceup="0" layer="2" hiddenby="16" />	
	<slot id="18" x="7.25" y="-3.5" faceup="0" layer="1"  hiddenby="17"/>
	<slot id="19" x="7.5" y="-3.5" faceup="0" layer="0" hiddenby="18"/>

	<!-- Layer5, the top level. -->
	<slot id="20" x="3.5" y="-6" faceup="0" layer="3" />
	<slot id="21" x="3.75" y="-6" faceup="0" layer="2" hiddenby="20"/>
	<slot id="22" x="4" y="-6" faceup="0" layer="1" hiddenby="21"/>
	<slot id="23" x="4.25"  y="-6" faceup="0" layer="0" hiddenby="22"/>

	<!-- Layer6, the top level. -->
	<slot id="24" x="0"  y="-8" faceup="0" layer="3" />
	<slot id="25" x=".25"  y="-8" faceup="0" layer="2" hiddenby="24"/>
	<slot id="26" x=".5"  y="-8" faceup="0" layer="1" hiddenby="25"/>
	<slot id="27" x=".75"  y="-8" faceup="0" layer="0" hiddenby="26"/>

	<!-- Layer7, the next level. -->
	<slot id="28" x="-3.5" y="-6" faceup="0" layer="3"  />
	<slot id="29" x="-3.75" y="-6" faceup="0" layer="2" hiddenby="28" />
	<slot id="30" x="-4"  y="-6" faceup="0" layer="1" hiddenby="29" />
	<slot id="31" x="-4.25"  y="-6" faceup="0" layer="0" hiddenby="30" />

	<!-- Layer8, the next level. -->
	<slot id="32" x="-6.75"  y="-3.5" faceup="0" layer="3"  />
	<slot id="33"  x="-7" y="-3.5" faceup="0" layer="2" hiddenby="32" />
	<slot id="34" x="-7.25" y="-3.5" faceup="0" layer="1" hiddenby="33" />
	<slot id="35" x="-7.5" y="-3.5" faceup="0" layer="0" hiddenby="34" />

	<!-- Layer9, the top level. -->
	<slot id="36" x="-8" y="0" faceup="0" layer="3" />
	<slot id="37" x="-8.25"  y="0" faceup="0" layer="2" hiddenby="36" />
	<slot id="38" x="-8.5"  y="0" faceup="0" layer="1" hiddenby="37" />
	<slot id="39" x="-8.75"  y="0" faceup="0" layer="0" hiddenby="38" />

	<!-- Layer10, the top level. -->
	<slot id="40" x="-6.75"  y="3.5" faceup="0" layer="3"  />
	<slot id="41" x="-7"  y="3.5" faceup="0" layer="2" hiddenby="40" />
	<slot id="42" x="-7.25" y="3.5" faceup="0" layer="1"  hiddenby="41"/>
	<slot id="43" x="-7.5" y="3.5" faceup="0" layer="0" hiddenby="42"/>

	<!-- Layer11, the top level. -->
	<slot id="44" x="-3.5" y="6" faceup="0" layer="3" />
	<slot id="45" x="-3.75" y="6" faceup="0" layer="2" hiddenby="44"/>
	<slot id="46" x="-4" y="6" faceup="0" layer="1" hiddenby="45"/>
	<slot id="47" x="-4.25"  y="6" faceup="0" layer="0" hiddenby="46"/>

	<!-- Layer12, the top level. -->
	<slot id="48" x="0"  y="8" faceup="0" layer="3" />
	<slot id="49" x=".25"  y="8" faceup="0" layer="2" hiddenby="48"/>
	<slot id="50" x=".5"  y="8" faceup="0" layer="1" hiddenby="49"/>
	<slot id="51" x=".75"  y="8" faceup="0" layer="0" hiddenby="50"/>
	
	
	
</xml>
	